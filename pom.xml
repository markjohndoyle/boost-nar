<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.boost</groupId>
    <artifactId>parent</artifactId>
    <version>1.5.7</version>
    <packaging>pom</packaging>

    <name>Boost :: Parent</name>
    <description>Boost stuff</description>

    <modules>
        <module>algorithm</module>
        <module>bind</module>
        <module>concept</module>
        <module>config</module>
        <module>core</module>
        <module>date-time</module>
        <module>detail</module>
        <module>exception</module>
        <module>filesystem</module>
        <module>function</module>
        <module>function_types</module>
        <module>functional</module>
        <module>fusion</module>
        <module>integer</module>
        <module>io</module>
        <module>iostreams</module>
        <module>iterator</module>
        <module>math</module>
        <module>move</module>
        <module>mpl</module>
        <module>optional</module>
        <module>phoenix</module>
        <module>predef</module>
        <module>preprocessor</module>
        <module>proto</module>
        <module>range</module>
        <module>regex</module>
        <module>smart-ptr</module>
        <module>spirit</module>
        <module>system</module>
        <module>type-traits</module>
        <module>type_index</module>
        <module>typeof</module>
        <module>utility</module>
        <module>variant</module>
    </modules>

    <build>
        <plugins>
            <plugin>
                <groupId>com.github.maven-nar</groupId>
                <artifactId>nar-maven-plugin</artifactId>
                <version>3.2.2</version>
                <extensions>true</extensions>
                <configuration>
                    <cpp>
                        <name>g++</name>
                        <debug>false</debug>
                        <includes>
                            <include>**/*.hpp</include>
                            <include>**/*.h</include>
                            <include>**/*.cpp</include>
                            <include>**/*.c</include>
                        </includes>
                        <options>
                            <option>-std=c++11</option>
                        </options>
                    </cpp>

                    <linker>
                        <name>g++</name>
                    </linker>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>

